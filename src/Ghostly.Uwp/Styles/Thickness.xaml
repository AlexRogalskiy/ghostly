<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">    

    <!--Custom size margins-->
    <Thickness x:Key="PageMargin">12,0,12,12</Thickness>
    <Thickness x:Key="PageTitleMargin">0,0,12,7</Thickness>
    <Thickness x:Key="SettingsSubheaderMargin">0, 20, 0, 48</Thickness>

    <!--Medium size margins-->
    <Thickness x:Key="LargeTopMargin">0,24,0,0</Thickness>
    <Thickness x:Key="LargeTopBottomMargin">0,24,0,24</Thickness>

    <!--Medium size margins-->
    <Thickness x:Key="MediumTopMargin">0,18,0,0</Thickness>
    <Thickness x:Key="MediumTopBottomMargin">0,18,0,18</Thickness>
    <Thickness x:Key="MediumLeftRightMargin">12,0,12,0</Thickness>
    <Thickness x:Key="MediumLeftTopRightBottomMargin">12,12,12,12</Thickness>

    <!--Small size margins-->
    <Thickness x:Key="SmallLeftMargin">12, 0, 0, 0</Thickness>
    <Thickness x:Key="SmallTopMargin">0, 12, 0, 0</Thickness>
    <Thickness x:Key="SmallTopBottomMargin">0, 12, 0, 12</Thickness>
    <Thickness x:Key="SmallLeftRightMargin">12, 0, 12, 0</Thickness>

    <!--Extra Small size margins-->
    <Thickness x:Key="XSmallTopMargin">0, 8, 0, 0</Thickness>
    <Thickness x:Key="XSmallLeftTopRightBottomMargin">8, 8, 8, 8</Thickness>

    <!--Extra Extra Small size margins-->
    <Thickness x:Key="XXSmallTopMargin">0, 4, 0, 0</Thickness>
</ResourceDictionary>
