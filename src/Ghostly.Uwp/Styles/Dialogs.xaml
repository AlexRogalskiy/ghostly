<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Ghostly.Uwp.Styles">

    <Style TargetType="Button" x:Key="ContentDialogPrimaryButtonDangerStyle">
        <Setter Property="Background" Value="#DB3A29" />
        <Setter Property="Foreground" Value="White" />
    </Style>

    <Style TargetType="Button" x:Key="ContentDialogPrimaryButtonDefaultStyle">
        <Setter Property="Background" Value="#436AF2" />
        <Setter Property="Foreground" Value="White" />
    </Style>

</ResourceDictionary>
